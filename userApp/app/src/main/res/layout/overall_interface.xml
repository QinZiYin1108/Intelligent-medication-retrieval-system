<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".overall_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_type2"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/image_ui_1">
            </ImageView>

            <LinearLayout
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:paddingLeft="30dp"
>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imageMyDrug_Main"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/drug"
                        android:layout_marginBottom="5dp"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:text="我的药单"
                        android:textSize="10dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imageHoisDrug_Main"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/history"
                        android:layout_marginBottom="5dp"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:text="历史药单"
                        android:textSize="10dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imageGetDrug_Main"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/scancode"
                        android:layout_marginBottom="5dp"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:text="扫码取药"
                        android:textSize="10dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageShuoMin_Main"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/instructions"
                        android:layout_marginBottom="5dp"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:text="购药说明"
                        android:textSize="10dp">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            >

            <android.widget.Button
                android:id="@+id/drugButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="主页"
                android:background="@drawable/my_button"
                android:textSize="30dp"
                >
            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/myButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的"
                android:background="@drawable/my_button"
                android:textSize="30dp">
            </android.widget.Button>

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>